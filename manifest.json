{
  "name": "Noplayit YouTube Chrome extension",
  "description": "An extension that disables YouTube autoplay option.",
  "author": "Bojana Pjevalica",
  "version": "1.0",
  "manifest_version": 3,

  "permissions": ["storage", "webNavigation", "tabs", "scripting", "activeTab"],

  "host_permissions": [
    "*://*/"
],

  "icons": {
    "16": "logo16.png",
    "128": "logo128.png"
  },

  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "No autoplay it YouTube"
  },

  "background": {
    "service_worker": "background.js"
  }
}
